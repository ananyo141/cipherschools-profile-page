{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "allowJs": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "removeComments": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  }
}
